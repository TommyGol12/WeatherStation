<style>

* {
  font-family: "Comic Sans MS";
  color: #ddd;
}

body {
  margin: 0;
  background-color: rgb(0, 0, 0);
  overflow: hidden;
}
ul, li {
  padding: 0;
  list-style-type: none;
}

.grid-container {
  display: grid;
  grid-template-columns: 1fr 3fr 1fr;
  column-gap: 30px;
}

nav {
  padding: 30px;
  border-right: 1px solid #ddd;
}
nav li {
  text-decoration: underline;
}
article {
  padding: 30px;
}
article h2 {
  font-size: 3.5em;
  max-width: 800px;
}
article img {
  width: 100%;
}
article p {
  margin-top: 30px;
  line-height: 2em;
  color: #777;
}

footer {
  grid-column: span 3;
  text-align: center;
  border-top: 1px solid rgb(46, 46, 46);
  padding: 30px;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 45px;   /* Height of the footer */
}

/* responsive */
@media screen and (max-width: 1200px) {
  nav {
    grid-column: span 3;
    border-right: 0;
    border-bottom: 1px solid #ddd;
  }
  nav li {
    display: inline-block;
    margin-right: 10px;
  }
  article {
    grid-column: span 2;
  }
  aside {
    padding: 16px;
  }
}

@media screen and (max-width: 980px) {
  nav, article, aside {
    grid-column: span 3;
  }
  aside {
    border-left: 0;
    border-top: 1px solid #ddd;
  }
  article {
    padding: 5px;
  }
}

.Box {
  width: 850px;
  height: 300px;
  border: 1px solid black;
  padding: 10px;
  margin: 0 auto; /* Center horizontally */
  text-align: center;
  position: absolute;
  top: 75%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgb(47, 47, 62);
  color: rgb(235, 235, 235);
  border-radius: 25px;
}

.Top {
  width: 600px;
  height: 200px;
  color: rgb(255, 255, 255);
  padding: 10px;
  position: absolute;
  top: 27%;
  left: 40%;
  transform: translate(-50%, -50%);
  font-size: larger; 
}

.tempf {
  font-size: xxx-large;
}

.Img {
  position: absolute;
  right: 0;
  top: 0;
  width: 200px;
  height: auto;
} 
</style>